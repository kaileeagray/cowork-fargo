<!DOCTYPE html>
<html>
  <head>
    <title><%=full_title(yield(:title))%></title>
    <%= csrf_meta_tags %>

    <%= render 'layouts/defaults' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= render 'layouts/messages' %>
      <% if current_page?(root_path)%>
        <%= yield %>
      <% else %>
      <div class="container-static">
        <%= yield %>
      </div>
      <% end %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
