<div class="container">
  <div class="col-md-6">
    <div id="map" style='width: 100%; height: 600px;'></div>
  </div>

  <div class="col-md-6">

    <%= link_to new_checkin_path do %>
      <button class="btn btn-warning">New</button>
    <% end %>

    <hr>

    <% @checkins.each do |checkin| %>

      <div class="row-fluid">
        <h3><%= checkin.name %></h3>
        <p><%= checkin.address %></p>
        <p>Latitude: <%= checkin.latitude %></p>
        <p>Longitude: <%= checkin.longitude %></p>

        <%= link_to "Show", checkin, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_checkin_path(checkin), class: "btn btn-primary" %>
        <%= link_to "Delete", checkin, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary" %>

      </div>

    <% end %>


  </div>

</div>


<% content_for(:after_js) do %>
  <script type="text/javascript">
    $(document).on('ready', function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
